# AgriSmart Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# Clerk Authentication (Required)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ============================================
# Supabase Configuration (Required)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# Admin Configuration (Optional)
# ============================================
# Comma-separated list of admin email addresses
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,admin2@domain.com
# Server-side admin user IDs (from Clerk)
ADMIN_USER_IDS=user_1,user_2,user_3

# ============================================
# API Configuration (Optional)
# ============================================
# Weather API Key (OpenWeatherMap or similar)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Government Schemes API (if available)
SCHEMES_API_URL=https://api.gov.in/schemes
SCHEMES_API_KEY=your_schemes_api_key_here

# Market Prices API (AGMARKNET or similar)
MARKET_API_URL=https://agmarknet.gov.in/api
MARKET_API_KEY=your_market_api_key_here

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable experimental features
NEXT_PUBLIC_ENABLE_IOT_FEATURES=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ============================================
# Development Configuration (Optional)
# ============================================
# Enable debug logging
NEXT_PUBLIC_DEBUG_MODE=false

# Custom domain for production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# ============================================
# Social Login Configuration (Optional)
# ============================================
# Google OAuth (if using Google login with Clerk)
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# File Upload Configuration (Optional)
# ============================================
# AWS S3 or similar for file uploads
NEXT_PUBLIC_UPLOAD_URL=https://your-s3-bucket.s3.amazonaws.com
UPLOAD_ACCESS_KEY=your_aws_access_key
UPLOAD_SECRET_KEY=your_aws_secret_key
UPLOAD_BUCKET_NAME=your_s3_bucket_name
UPLOAD_REGION=your_s3_region

# ============================================
# External Integrations (Optional)
# ============================================
# SMS Service (Twilio, etc.)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Service (SendGrid, etc.)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@your-domain.com

# ============================================
# Database Connection (Alternative to Supabase)
# ============================================
# If not using Supabase, configure PostgreSQL directly
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_HOST=hostname
DB_PORT=5432
DB_NAME=database_name
DB_USER=username
DB_PASSWORD=password

# ============================================
# Security Configuration (Optional)
# ============================================
# JWT Secret for custom tokens
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# Monitoring and Analytics (Optional)
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# ============================================
# Localization (Optional)
# ============================================
# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,hi,mr,te,ta

# ============================================
# Cache Configuration (Optional)
# ============================================
# Redis for caching (optional)
REDIS_URL=redis://username:password@hostname:6379
REDIS_CACHE_TTL=3600

# ============================================
# WhatsApp Integration (Optional)
# ============================================
# WhatsApp Business API
WHATSAPP_PHONE_ID=your_whatsapp_phone_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ============================================
# IoT Device Configuration (Future Features)
# ============================================
# MQTT Broker for IoT devices
MQTT_BROKER_URL=mqtt://your-broker.com:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# ============================================
# Additional Configuration
# ============================================
# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=development

# Port for development server
PORT=3000

